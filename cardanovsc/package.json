{
  "name": "cardanovsc",
  "displayName": "CardanoVSC",
  "description": "supports in cardano development",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "media/icon1.png",
  "activationEvents": [],
  "extensionDependencies": [
      "justusadam.language-haskell"
    ]
    ,
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cardanovsc.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "cardanovsc.get_block_details",
        "title": "get_block_details"
      }
    ],
    "viewsContainers": {
     
      "activitybar": [
        {
          "id": "CardanoVSC",
          "title": "CardanoVSC",
          "icon": "media/icon1.svg"
        }
      ]
    },
    "views": {
      "CardanoVSC": [
        {
          "type": "webview",
          "id": "cardanovsc.webview",
          "name": ""
        }
      ]
    },
    "languages": [
      {
        "id": "plutus",
        "extensions": [".plutus"]
      }
    ],
    "grammars": [
      {
        "language": "plutus",
        "scopeName": "source.plutus",
        "path": "./syntaxes/plutus.tmLanguage.json"
        
      }
    ],
    "configurationDefaults": {
      "editor.tokenColorCustomizations": {
  "textMateRules": [
    {
      "scope": "meta.structure.key-value",
      "settings": {
        "foreground": "#9CDCFE",
        "fontStyle": "bold"
      }
    }
  ]
}
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
